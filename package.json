{
  "name": "@nielspeter/sonarlint-mcp-server",
  "version": "0.1.2",
  "description": "MCP server providing SonarLint code analysis for Claude Desktop and other MCP clients",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nielspeter/sonarlint-mcp-server.git"
  },
  "scripts": {
    "postinstall": "bash scripts/setup-sonarlint.sh",
    "setup": "bash scripts/setup-sonarlint.sh",
    "build": "tsc",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "inspect": "mcp-inspector dist/index.js",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch"
  },
  "bin": {
    "sonarlint-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "scripts",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "mcp",
    "sonarlint",
    "sonarqube",
    "code-quality",
    "static-analysis",
    "ide-integration"
  ],
  "author": "Niels Peter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nielspeter/sonarlint-mcp-server/issues"
  },
  "homepage": "https://github.com/nielspeter/sonarlint-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.15.0",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@vitest/ui": "^4.0.8",
    "standard-version": "^9.5.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.8"
  }
}
